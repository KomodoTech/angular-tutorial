{
  "compilerOptions": {
    "outDir": "dist/app",
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "jasmine",
      "jquery",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ],
  "filesGlob": [
    "app/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "app/app.component.ts",
    "app/app.module.ts",
    "app/dashboard.component.ts",
    "app/hero-detail.component.ts",
    "app/hero.model.ts",
    "app/hero.service.ts",
    "app/heroes.component.ts",
    "app/main.ts",
    "app/mock-heroes.ts"
  ]
}
